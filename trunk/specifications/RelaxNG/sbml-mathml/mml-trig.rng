<?xml version="1.0" encoding="UTF-8"?>

<grammar xmlns="http://relaxng.org/ns/structure/1.0"
 datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

 <!-- trigonometric
  these are trigonometric functions that may follow an apply element
 --> 

 <define name="sin.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="tan.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="cos.datatype">
  <ref name="mathml_attrib"/>
 </define>

 <define name="sec.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="csc.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="cot.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="arcsin.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="arctan.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="arccos.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="arcsec.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="arccsc.datatype">
  <ref name="mathml_attrib"/>
 </define>
 
 <define name="arccot.datatype">
  <ref name="mathml_attrib"/>
 </define>

 <define name="trig" combine="choice">
  <choice>
   <element name="sin">
    <ref name="sin.datatype"/>
   </element>
   <element name="cos">
    <ref name="cos.datatype"/>
   </element>
   <element name="tan">
    <ref name="tan.datatype"/>
   </element>
   <element name="sec">
    <ref name="sec.datatype"/>
   </element>
   <element name="csc">
    <ref name="csc.datatype"/>
   </element>
   <element name="cot">
    <ref name="cot.datatype"/>
   </element>
   <element name="arcsin">
    <ref name="arcsin.datatype"/>
   </element>
   <element name="arccos">
    <ref name="arccos.datatype"/>
   </element>
   <element name="arctan">
    <ref name="arctan.datatype"/>
   </element>
   <element name="arcsec">
    <ref name="arcsec.datatype"/>
   </element>
   <element name="arccsc">
    <ref name="arccsc.datatype"/>
   </element>
   <element name="arccot">
    <ref name="arccot.datatype"/>
   </element>
  </choice>
 </define>
 
</grammar>
